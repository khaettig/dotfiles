gaps outer 5px
gaps inner 10px

# Screens
bar {
	font pango:Ubuntu Mono Nerd Font {{ fontsize }}
	output {{ screens.primary }}

	{% if screens.secondary %}
		status_command i3blocks -c "/home/kevin/.i3blocks.conf"
		tray_output none
	{% else %}
		status_command i3blocks -c "/home/kevin/.i3blocks_all.conf"
	{% endif %}

	colors {
		statusline "#C7C8D0"
		separator "#101010"
		background "#101010"

		focused_workspace "#C7C8D0" "#262626" "#C7C8D0"
		active_workspace "#262626" "#262626" "#C7C8D0"
		inactive_workspace "#262626" "#262626" "#C7C8D0"
