client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          $indicator-color 

exec --no-startup-id /usr/bin/feh --bg-scale {{ wallpaper }}

bindsym $mod+x kill
bindsym $mod+v exec i3lock -i {{ lock_image }}
bindsym $mod+Shift+X exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+V exec i3lock -i {{ lock_image }} && systemctl suspend

bindsym Print exec flameshot full -c
bindsym Control+Print exec flameshot gui
bindsym Control+Shift+Print exec peek

bindsym $mod+o exec nautilus
bindsym $mod+c exec google-chrome
bindsym $mod+f exec firefox
bindsym $mod+Shift+C exec google-chrome --incognito
bindsym $mod+Shift+F exec firefox --private-window

