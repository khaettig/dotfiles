[colors.normal]
black = "#121212"
blue = "#3465A4"
cyan = "#7FBBB3"
green = "#007400"
magenta = "#8959a8"
red = "#800000"
white = "#C7C8D0"
yellow = "#FFFF00"

[colors.primary]
background = "#121212"
foreground = "#C7C8D0"

[font]
{% if YADM_HOSTNAME == "kevin-X1" %}
size = 10
{% elif YADM_HOSTNAME == "kevin-T15p" %}
size = 10
{% else %}
size = 14
{% endif %}

[font.bold]
family = "Jetbrains Mono Nerd Font"
style = "Bold"

[font.bold_italic]
family = "Jetbrains Mono Nerd Font"
style = "Bold Italic"

[font.italic]
family = "Jetbrains Mono Nerd Font"
style = "Italic"

[font.normal]
family = "Jetbrains Mono Nerd Font"
style = "Regular"

[font.offset]
x = 0
y = 0

[[keyboard.bindings]]
action = "ToggleFullScreen"
key = "Space"
mods = "Control"

[[keyboard.bindings]]
action = "SpawnNewInstance"
key = "Return"
mods = "Control"

[[keyboard.bindings]]
action = "IncreaseFontSize"
key = "Plus"
mods = "Control"

[[keyboard.bindings]]
action = "DecreaseFontSize"
key = "Minus"
mods = "Control"

[[keyboard.bindings]]
action = "ResetFontSize"
key = "Equals"
mods = "Control"

[mouse]
hide_when_typing = true

[scrolling]
history = 10000
multiplier = 3

{% if YADM_HOSTNAME == "kevin-T15p" %}
[terminal.shell]
{% else %}
[shell]
{% endif %}
program = "zsh"

[window.padding]
x = 10
y = 10
